<div class="p-5 mx-auto">
  {{#each this.editors as |editor|}}
    <div class="pb-10">
      <div>{{editor.name}}</div>
      <div class="2xl:flex">
        <div class="mb-5 2xl:w-1/2 2xl:mb-0 2xl:mr-5">
          <CKEditor
            @editor={{editor.editor}}
            @value={{editor.value}}
            @options={{editor.options}}
            @onInput={{action (mut editor.value)}}
            @onReady={{editor.onReady}}
            @replaceContentClass={{editor.replaceContentClass}}
          />
        </div>
        <div class="2xl:w-1/2">
          <div class="border border-gray-200 bg-white py-2 px-3 rounded">
            <h3 class="text-sm font-semibold mb-2">Output</h3>
            <div class="prose">{{{editor.value}}}</div>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>
